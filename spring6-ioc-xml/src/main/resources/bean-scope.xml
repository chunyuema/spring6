<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- instance created when the application context is loaded-->
    <bean id="order-singleton" class="com.chunyue.spring6.iocxml.beanscope.Order"
          scope="singleton"></bean>

    <!-- instance created when the beans are obtained -->
    <bean id="order-prototype" class="com.chunyue.spring6.iocxml.beanscope.Order"
          scope="prototype"></bean>

</beans>